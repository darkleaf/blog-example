= link_to 'new', action: :new
%table.table.table-striped
  %thead
    %tr
      %th= Post.human_attribute_name :title
      %th= Post.human_attribute_name :content
      %th= Post.human_attribute_name :created_at
      %th
  %tbody
  - @posts.each do |item|
    %tr
      %td= item.title
      %td= item.content
      %td= l item.created_at, format: :long
      %td
        .pull-right
          = link_to 'edit', { action: :edit, id: item }, class: 'btn btn-mini btn-primary'
          = link_to 'destroy', { action: :destroy, id: item },
                     method: :delete, data: { confirm: 'Sure?' }, class: 'btn btn-mini btn-primary'
